!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=edge', 'http-equiv': 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1', name: 'viewport' }/
    -# The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags

    %title
      = yield(:title) || 'jhe.ph - Personal Website of Jeriel Paul A. Abayon'
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags

    -# HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    -# WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      = javascript_include_tag '//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'
      = javascript_include_tag '//oss.maxcdn.com/respond/1.4.2/respond.min.js'

  %body
    %header.jumbotron
    %section.template
    %aside.scripts
      :coffeescript
        @App =
          layout_name: '#{local_assigns[:layout_name]}'
          response: JSON.parse('#{local_assigns[:json]}')
          router_name: '#{local_assigns[:router_name]}'
      = javascript_include_tag 'application'
